{
  "name": "linux_reminder",
  "description": "‚è∞ simple crontab based reminder designed to be used in daily tasks on linux.",
  "version": "0.0.0",
  "keywords": [
    "linux",
    "crontab",
    "reminder",
    "productivity",
    "cronjobs",
    "automation"
  ],
  "license": "MIT",
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/linux_reminder.git"
  },
  "bin": {
    "linux_reminder": "./dist/index.js",
    "lr": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install && chmod +x ./examples/simple.sh",
    "start": "node ./dist/index.js",
    "dev": "bash ./examples/simple.sh",
    "build": "rimraf ./dist && tsc",
    "semantic_release": "HUSKY=0 semantic-release",
    "package_check": "npm publish --dry-run",
    "package_gen": "npm pack && tar -xvzf *.tgz",
    "package_del": "rm -rf package *.tgz",
    "commit": "cz",
    "lint_staged": "lint-staged --concurrent false --quiet"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/google-apps-script": "^1.0.78",
    "@types/node": "^20.10.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
